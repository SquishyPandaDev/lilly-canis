{
  "compilerOptions": {
    "allowJs"                     : false,
    "baseUrl"                     : "src/",
    "esModuleInterop"             : true,
    "moduleResolution"            : "node",
    "noImplicitAny"               : true,
    "noImplicitReturns"           : true,
    "noUnusedLocals"              : false,
    "removeComments"              : true,
    "sourceMap"                   : true,
    "strict"                      : true,
    "strictNullChecks"            : true,
    "strictPropertyInitialization": true,
    "target"                      : "ES2019"
  },
  "include": [
    "**/*.ts", "src/main.ts.old"
  ]
}
